{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title">
            {% if pageTitle is defined %}
                {{ pageTitle }}
            {% endif %}
        </h1>
    </div>
    <fieldset class="form-fieldset">
        {{ form_start(blogForm) }}
        <div class="form-group">
            {{ form_errors(blogForm.title) }}
            <label class="form-label">{{ form_label(blogForm.title) }}<span class="form-required">*</span></label>
            {{ form_widget(blogForm.title) }}
        </div>
        <div class="form-group">
            {{ form_errors(blogForm.content) }}
            <label class="form-label">{{ form_label(blogForm.content) }}<span class="form-required">*</span></label>
            {{ form_widget(blogForm.content) }}
        </div>
        {{ form_end(blogForm) }}
    </fieldset>
{% endblock %}
