{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title">
            {% if pageTitle is defined %}
                {{ pageTitle }}
            {% endif %}
        </h1>
    </div>
    <div class="row row-cards row-deck">
        {% for post in posts %}
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-body d-flex flex-column">
                        <h4><a href="/read/{{ post.id }}">{{ post.title }}</a></h4>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}