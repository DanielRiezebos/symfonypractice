<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Blogr_{% endblock %}</title>
    {% block stylesheets %}
        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

        <!-- Tabler -->
        <link rel="stylesheet" type="text/css" href="/css/tabler.css">
    {% endblock %}
</head>
<body>
<div class="page">
    <div class="page-main">
        <div class="header py-4">
            <div class="container">
                <div class="d-flex">
                    <a class="header-brand" href="/">
                        <img src="/img/logo.png" class="header-brand-img" alt="tabler logo" width=150 height=150>
                        {% if is_granted("ROLE_USER") %}
                            Hi {{ app.user.username }}
                        {% endif %}
                    </a>
                    <div class="d-flex order-lg-2 ml-auto">

                    </div>
                    <div class="d-flex order-lg-2 ml-auto">
                        <div class="nav-item d-none d-md-flex">
                            <a href="/blog" class="btn btn-sm btn-primary">New blog</a>
                        </div>
                        <div class="nav-item d-none d-md-flex">
                            <a href="/logout" class="btn btn-sm btn-outline-primary">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg order-lg-first">
                        <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                            <li class="nav-item">
                                <a href="/myblogs" class="nav-link">My Blogs</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-3 my-md-5">
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <!-- <script> tags in the inherent templates for syntax highlighting -->
{% endblock %}
</body>
</html>
