<head>
    <meta charset="UTF-8">    
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/css/tabler.css">
    {% endblock %}
</head>

{% block body %}
<body class="">
    <div class="page">
      <div class="page-single">
        <div class="container">
          <div class="row">
            <div class="col col-login mx-auto">
              <div class="text-center mb-6">
                <img src="/img/logo.png" class="h-6" alt="">
              </div>
              {{ form_start(form, {'attr': {'class': 'card'}} ) }}
                <div class="card-body p-6">
                  <div class="card-title">Register your new account</div>
                  <div class="form-group">                    
                    {{ form_row(form.username, {'attr': {'class': 'form-control'}} ) }}
                  </div>
                  <div class="form-group">                    
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                  </div>
                  <div class="form-group">
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                  </div>
                  <div class="form-group">
                    {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
                  </div>
                  <div class="form-footer">
                    <button type="submit" class="btn btn-primary btn-block">Register!</button>
                  </div>
                </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
{% endblock %}
