{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h2>Welkom op Blogr_ :)</h2>
            <p>
                Op deze oefensite oefen ik de basis van Symfony door een blogging site te maken met een vote systeem geinspireerd op reddit.com. :)
            </p>
        </div>
    </div>
    <div class="page-header">
        <h1 class="page-title">
            {% if pageTitle is defined %}
                {{ pageTitle }}
            {% endif %}
        </h1>
    </div>
    <div class="row row-cards row-deck">
        {% for post in newestPosts %}
            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    {% if app.user %}
                    <div class="card-header">
                        <div class="card-options">
                            {% include('voteblock.html.twig') %}
                        </div>
                    </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h4><a href="/read/{{ post.id }}">{{ post.title }}</a></h4>
                        <div class="d-flex align-items-center pt-5 mt-auto">
                            <div>
                                <a href="./profile.html" class="text-default">{{ post.user.username }}</a>
                                <small class="d-block text-muted"></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}